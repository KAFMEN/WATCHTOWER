{% extends "admin/base_admin.html.twig" %}

{% block body %}
    <div class="container py-5">
        <div class="row">
        <div class="col-12 mb-3">
        <a href="{{path('admin_category') }}" class="btn-primary"></a>
        
        
        </div>

        
            {% include "customer/_messages_flash.html.twig" %}

            {% for product in product %}
                <div class="col-4">
                    <div class="card" >
                        <img src="{{ product.image }}" class="card-img-top w-100 imageCard"  alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p>{{ product.price | euroPrice }}</p>
                        </div>
                        <div class="card-footer">
                        <a href="{{ path('cart_add',{'id': product.id}) }}" class="btn btn-primary w-100">Ajouter au panier</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
